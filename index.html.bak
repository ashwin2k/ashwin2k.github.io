<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ashwin Kumar Udayakumar</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
  <link rel="icon" href="imgs/favicon-32x32.png" />
  <style>
    :root {
      --color-bg: #0a0a0a;
      --color-text: #33ff66;
      --color-text-secondary: #86ceb6;
      --color-accent: #33ff66;
      --color-border: #33ff66;
      --max-width: 1000px;
      --color-header-bg: rgba(10, 10, 10, 0.8);
      --color-section-bg: rgba(20, 20, 20, 0.7);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Press Start 2P', monospace;
      background-color: var(--color-bg);
      color: var(--color-text);
      line-height: 1.5;
      background-image: 
        linear-gradient(rgba(0, 50, 0, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 50, 0, 0.1) 1px, transparent 1px);
      background-size: 20px 20px;
      position: relative;
      overflow-x: hidden;
    }

    body::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: repeating-linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.15),
        rgba(0, 0, 0, 0.15) 1px,
        transparent 1px,
        transparent 2px
      );
      pointer-events: none;
      z-index: 1;
    }

    .container {
      width: 100%;
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 24px;
      position: relative;
      z-index: 2;
    }

    .hero-section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 80px 24px 120px;
      position: relative;
    }

    .content-section {
      padding: 60px 0;
    }

    h1 {
      font-size: 32px;
      font-weight: normal;
      letter-spacing: -0.015em;
      margin-bottom: 30px;
      text-shadow: 4px 4px 0px rgba(0, 255, 0, 0.2);
      color: #33ff66;
    }

    h2 {
      font-size: 24px;
      font-weight: normal;
      letter-spacing: -0.015em;
      margin-bottom: 30px;
      position: relative;
      display: inline-block;
      text-shadow: 3px 3px 0px rgba(0, 255, 0, 0.2);
    }

    .section-title::before {
      content: "★";
      margin-right: 10px;
      color: #33ff66;
    }

    p {
      font-size: 14px;
      color: var(--color-text-secondary);
      max-width: 600px;
      margin: 0 auto 24px;
      line-height: 1.8;
    }

    .tagline {
      font-size: 12px;
      margin-bottom: 30px;
    }

    .about-text {
      text-align: left;
      margin-left: 0;
      width: 100%;
      max-width: 100%;
    }

    .profile-image {
      width: 120px;
      height: 120px;
      border-radius: 0;
      object-fit: cover;
      margin-bottom: 40px;
      transition: transform 0.3s ease;
      image-rendering: pixelated;
      border: 4px solid var(--color-accent);
      box-shadow: 6px 6px 0 rgba(0, 255, 0, 0.2);
    }

    .profile-image:hover {
      transform: scale(1.05);
    }

    .social-links {
      display: flex;
      justify-content: center;
      gap: 32px;
      margin-top: 40px;
    }

    .social-link {
      color: var(--color-text-secondary);
      transition: color 0.2s ease;
    }

    .social-link:hover {
      color: var(--color-accent);
      transform: scale(1.1);
    }

    .scroll-indicator {
      position: absolute;
      bottom: 50px;
      left: 50%;
      transform: translateX(-50%);
      color: var(--color-text-secondary);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 12px;
      font-size: 12px;
      opacity: 0.8;
      transition: opacity 0.3s ease;
      background-color: rgba(0, 0, 0, 0.7);
      padding: 10px 20px;
      border: 2px solid var(--color-accent);
      z-index: 10;
    }

    .scroll-indicator:hover {
      opacity: 1;
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(6px); }
    }

    .scroll-indicator svg {
      animation: bounce 2s infinite;
    }

    .section {
      margin-bottom: 60px;
      background-color: var(--color-section-bg);
      padding: 30px;
      border: 2px solid var(--color-accent);
      position: relative;
      box-shadow: 6px 6px 0 rgba(0, 255, 0, 0.2);
    }

    .section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 10px;
      background: repeating-linear-gradient(
        90deg,
        var(--color-accent),
        var(--color-accent) 10px,
        transparent 10px,
        transparent 20px
      );
    }

    .section-title {
      font-size: 20px;
      font-weight: normal;
      margin-bottom: 30px;
      position: relative;
      display: inline-block;
    }

    .skill-list {
      list-style: none;
      margin-bottom: 40px;
    }

    .skill-item {
      padding: 16px 0;
      border-bottom: 1px solid var(--color-border);
      font-size: 12px;
      display: flex;
      align-items: center;
    }

    .skill-item::before {
      content: '>';
      margin-right: 10px;
      color: #33ff66;
    }

    .skill-item:last-child {
      border-bottom: none;
    }

    .blog-list, .project-list {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .blog-item, .project-item {
      padding: 24px;
      background-color: rgba(0, 50, 0, 0.3);
      transition: transform 0.3s ease;
      text-decoration: none;
      color: var(--color-text);
      border: 2px solid var(--color-accent);
      position: relative;
      box-shadow: 4px 4px 0 rgba(0, 255, 0, 0.2);
    }

    .blog-item:hover, .project-item:hover {
      transform: translateY(-4px);
      box-shadow: 6px 6px 0 rgba(0, 255, 0, 0.3);
      background-color: rgba(0, 70, 0, 0.3);
    }

    .project-item {
      display: flex;
      align-items: center;
      gap: 24px;
    }

    .project-image {
      width: 80px;
      height: 80px;
      border-radius: 0;
      object-fit: cover;
      image-rendering: pixelated;
      border: 2px solid var(--color-accent);
    }

    .project-content h3, .blog-item h3 {
      font-size: 14px;
      font-weight: normal;
      margin-bottom: 8px;
    }

    .project-content p, .blog-item p {
      font-size: 12px;
      color: var(--color-text-secondary);
      margin: 0;
    }

    html {
      scroll-behavior: smooth;
    }

    @media (min-width: 768px) {
      .blog-list, .project-list {
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
      }

      .container {
        padding: 0 48px;
      }

      h1 {
        font-size: 36px;
      }

      .profile-image {
        width: 160px;
        height: 160px;
      }
    }

    .blog-item {
      position: relative;
      padding: 24px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    
    .blog-item h3 {
      font-size: 14px;
      font-weight: normal;
      margin-bottom: 16px;
      letter-spacing: 0;
      transition: color 0.3s ease;
    }
    
    .blog-item:hover h3 {
      color: #ffffff;
    }
    
    .blog-item::before {
      content: '>';
      position: absolute;
      left: 10px;
      top: 10px;
      color: var(--color-accent);
    }

    .project-item {
      position: relative;
      padding: 24px;
      align-items: flex-start;
    }
    
    .project-image {
      width: 80px;
      height: 80px;
      object-fit: cover;
      box-shadow: 3px 3px 0 rgba(0, 255, 0, 0.3);
      transition: transform 0.3s ease;
    }
    
    .project-item:hover .project-image {
      transform: scale(1.05);
      box-shadow: 4px 4px 0 rgba(0, 255, 0, 0.4);
    }
    
    .project-content {
      flex: 1;
    }
    
    .project-content h3 {
      font-size: 14px;
      font-weight: normal;
      margin-bottom: 12px;
      letter-spacing: 0;
      transition: color 0.3s ease;
    }
    
    .project-item:hover .project-content h3 {
      color: #ffffff;
    }
    
    .project-content p {
      font-size: 12px;
      line-height: 1.5;
      color: var(--color-text-secondary);
    }

    .site-header {
      text-align: center;
      padding: 20px 0;
      margin-bottom: 30px;
      position: relative;
    }

    .site-title {
      font-size: 40px;
      color: #33ff66;
      text-shadow: 4px 4px 0px rgba(0, 255, 0, 0.3);
      letter-spacing: 2px;
      margin-bottom: 10px;
      display: inline-block;
      position: relative;
    }

    a {
      color: #33ff66;
      text-decoration: none;
      position: relative;
    }

    a:hover {
      color: #ffffff;
    }

    a::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 1px;
      bottom: -2px;
      left: 0;
      background-color: #33ff66;
      visibility: hidden;
      transform: scaleX(0);
      transition: all 0.3s ease-in-out;
    }

    a:hover::after {
      visibility: visible;
      transform: scaleX(1);
    }

    /* Blinking cursor animation */
    @keyframes blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0; }
    }

    .cursor {
      display: inline-block;
      width: 10px;
      height: 20px;
      background-color: #33ff66;
      animation: blink 1s step-end infinite;
      margin-left: 5px;
    }

    /* Status indicator */
    .status {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: var(--color-section-bg);
      border: 2px solid var(--color-accent);
      padding: 10px 20px;
      font-size: 12px;
      z-index: 100;
    }

    .status::before {
      content: '●';
      color: #33ff66;
      margin-right: 10px;
      animation: blink 1s step-end infinite;
    }

    /* Noise overlay */
    .noise {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('data:image/png;base64, Elbla2JXPFYxdm7nL6x/xrDlcw7wQ6hcwLJQr0geQfqZMFB/yLm2rnqXa7l jLLw tWjZkwm2MffIhFHQ/YcKMHPFw==');
      opacity: 0.03;
      z-index: 9999;
      pointer-events: none;
    }

    /* Style for central press start text */
    .hero-center-text {
      position: fixed;
      bottom: 60px;
      left: 50%;
      transform: translateX(-50%);
      font-size: 16px;
      color: var(--color-accent);
      text-shadow: 2px 2px 0px rgba(0, 0, 0, 0.8);
      background-color: rgba(0, 0, 0, 0.7);
      padding: 15px 30px;
      border: 2px solid var(--color-accent);
      z-index: 100;
      text-align: center;
      animation: pulse 2s infinite;
      width: auto;
      white-space: nowrap;
      cursor: pointer;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.6; }
    }

    }

    }
  </style>
</head>

